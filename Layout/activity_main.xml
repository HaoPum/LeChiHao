<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"

        android:background="#1E90FF"
        android:textSize="30dp"
        android:paddingLeft="110dp"
        android:paddingTop="15dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Đặt vé máy bay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_marginLeft="14dp"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:background="@null"
                app:srcCompat="@drawable/iconsearch" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:paddingLeft="50dp"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <ImageButton

                android:id="@+id/goToLogin"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                app:srcCompat="@drawable/iconadmin" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="65dp"
                android:text="Admin"
                android:textColor="@color/black"
                android:textSize="19dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_tai_khoan"
                android:layout_marginLeft="14dp"
                android:layout_width="150dp"
                android:background="@null"
                android:layout_height="90dp"
                app:srcCompat="@drawable/iconanhcanhan" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:text="Thông tin tài khoản" />

            <ImageButton
                android:id="@+id/btn_chuyen_bay_da_dat"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:layout_width="150dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/iconmaybay" />

            <TextView
                android:paddingLeft="15dp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="Chuyến bay đã đặt"
                android:textColor="@color/black"
                android:textSize="19dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>