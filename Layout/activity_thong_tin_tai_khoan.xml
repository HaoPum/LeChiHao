<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcanhan"
    android:orientation="vertical"
    tools:context=".ThongTinTaiKhoan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Thoát" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="60dp"
            android:paddingTop="14dp"
            android:text="Thông tin tài khoản"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/icondangnhap" />

        <TextView
            android:textColor="@color/black"
            android:textSize="17dp"
            android:id="@+id/tv_username"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="USERNAME"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconname" />

        <TextView

            android:textColor="@color/black"
            android:textSize="17dp"
            android:id="@+id/tvfull_name"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="FULL NAME"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconemail" />

        <TextView
            android:textColor="@color/black"
            android:textSize="17dp"
            android:id="@+id/tv_email"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="EMAIL"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img4"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconphone" />

        <TextView
            android:textColor="@color/black"
            android:textSize="17dp"
            android:id="@+id/tv_phone"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="PHONE"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img5"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconaddress" />

        <TextView
            android:textColor="@color/black"
            android:textSize="17dp"
            android:id="@+id/tv_address"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="ADDRESS"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0" />
    </LinearLayout>

    <Button
        android:layout_marginLeft="60dp"
        android:background="#4169E1"
        android:id="@+id/btn_sua_tt_kh"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="sửa thông tin" />

</LinearLayout>