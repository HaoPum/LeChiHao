<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhapThongTinDatVe">

    <TextView
        android:paddingTop="20dp"
        android:paddingLeft="100dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="#4169E1"
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Nhập thông tin hành khách" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/iconanhcanhan" />

        <EditText
            android:id="@+id/edt_ten_hanh_khach"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Họ và tên"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/iconname" />

        <EditText
            android:id="@+id/edt_cmnd_hanh_khach"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="CMND/CCCD"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/iconquanlty" />

        <EditText
            android:id="@+id/edt_so_luong_ve"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Số lượng vé"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/iconvoucher" />

        <EditText
            android:id="@+id/voucher"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Mã khuyến mãi"
            android:inputType="number" />
    </LinearLayout>
    <Button
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="#9370DB"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/btn_next_xac_nhan"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Tiếp tục" />
</LinearLayout>