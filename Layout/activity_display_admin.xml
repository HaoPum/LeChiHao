<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisplayAdmin">


    <LinearLayout
        android:background="#4169E1"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="170dp"
            android:paddingTop="15dp"
            android:text="ADMIN"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconmaybay1" />

        <Button
            android:id="@+id/btn_next_them"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Thêm chuyến bay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icondelete" />

        <Button
            android:id="@+id/btn_next_xoa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Xóa chuyến bay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconedit" />

        <Button
            android:id="@+id/btn_next_sua"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sửa chuyến bay" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconmanage" />

        <Button
            android:id="@+id/btn_bookings"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Quản lý đặt vé" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icondangnhap" />

        <Button
            android:id="@+id/btn_users"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Quản lý người dùng" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconvoucher" />

        <Button
            android:id="@+id/next_them_vouhcer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Thêm voucher" />
    </LinearLayout>
</LinearLayout>