<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcanhan"
    android:orientation="vertical"
    tools:context=".ThongTinTaiKhoan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="150dp"
            android:paddingTop="14dp"
            android:text="Sửa thông tin"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/icondangnhap" />

        <TextView
            android:id="@+id/tv_show_username_edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:inputType="textPersonName"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:text="id:"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/id_edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:inputType="textPersonName"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconname" />

        <EditText
            android:id="@+id/edt_sua_fullname"
            android:inputType="textPersonName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconemail" />

        <EditText
            android:id="@+id/sua_email"
            android:inputType="textEmailAddress"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconphone" />

        <EditText
            android:id="@+id/sua_phone"
            android:inputType="phone"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconaddress" />

        <EditText
            android:id="@+id/sua_address"
            android:inputType="textPersonName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

    <Button
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:background="#4169E1"
        android:id="@+id/btn_cap_nhat_sua"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="cập nhật" />


</LinearLayout>