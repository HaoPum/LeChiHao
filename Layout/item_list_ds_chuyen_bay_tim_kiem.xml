<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_show_di"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_show_time_di"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_vt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá vé: " />

            <TextView
                android:textColor="#E91E63"
                android:id="@+id/tv_show_gia_ve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_ds_tim_kiem"
        android:layout_width="40dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/iconmaybay1" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_show_den"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_show_time_den"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

    </LinearLayout>

    <TextView
        android:background="#2196F3"
        android:paddingTop="16dp"
        android:paddingLeft="22dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:id="@+id/tv_chon_item"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="CHỌN" />

</LinearLayout>