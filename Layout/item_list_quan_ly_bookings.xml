<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Mã Bookings: "
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tv_id_booking"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="8dp"
            android:text="textview "
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_one_bookings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/iconmaybay1" />

        <TextView
            android:id="@+id/tv_diem_di_bookings"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:paddingTop="7dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="7dp"
            android:text="Đến"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_diem_den_bookings"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:paddingLeft="25dp"
            android:paddingTop="7dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_two_bookings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/iconkhachhang" />

        <TextView
            android:id="@+id/tv_name_kh_bookings"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:text="Số vé: "
            android:textColor="#673AB7" />

        <TextView
            android:id="@+id/tv_so_ve_bookings"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:textColor="@color/white"
            android:background="#ff00"
            android:id="@+id/btn_huy_bookings"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="Hủy vé" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_three_bookings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/iconmoney" />

        <TextView
            android:textSize="15dp"
            android:textColor="#DC143C	"
            android:paddingTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tổng thanh toán:" />

        <TextView
            android:id="@+id/tv_tong_tien_bookings"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:text="TextView"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>