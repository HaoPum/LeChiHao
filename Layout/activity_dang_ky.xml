<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundangky"
    tools:context=".DangKy">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="170dp"
        android:paddingTop="25dp"
        android:text="Đăng ký"
        android:textColor="#8A2BE2"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icondangnhap" />

        <EditText
            android:id="@+id/dangkyUserName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Tên đăng nhập"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconmatkhau" />

        <EditText
            android:id="@+id/dangkyPassWord"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Đặt mật khẩu"
            android:inputType="textPassword" />
    </LinearLayout>
    <TextView
        android:textColor="#ff00"
        android:paddingTop="5dp"
        android:paddingLeft="120dp"
        android:textSize="20dp"
        android:text="Thông tin liên hệ"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconname" />

        <EditText
            android:id="@+id/dangkyFullName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Họ và tên"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconemail" />

        <EditText
            android:id="@+id/dangkyEmail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconphone" />

        <EditText
            android:id="@+id/dangkyPhone"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgadress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconaddress" />

        <EditText
            android:id="@+id/dangkyAddress"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Đia chỉ"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:background="#00CED1"
        android:id="@+id/btnDangKy"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Đăng ký" />
</LinearLayout>