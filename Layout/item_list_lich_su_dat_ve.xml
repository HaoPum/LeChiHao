<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_one_ls"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/iconmaybay1" />

        <TextView
            android:id="@+id/tv_diem_di_ls"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:paddingTop="7dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="7dp"
            android:text="Đến"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_diem_den_ls"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:paddingLeft="25dp"
            android:paddingTop="7dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_two_ls"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/iconkhachhang" />

        <TextView
            android:id="@+id/tv_ten_kh_ls"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:text="Số vé: "
            android:textColor="#673AB7" />

        <TextView
            android:id="@+id/tv_so_ve_ls"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:background="#ff00"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_huy_ve_ls"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hủy vé" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_three_ls"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/iconmoney" />

        <TextView
            android:textSize="15dp"
            android:textColor="#DC143C	"
            android:paddingTop="9dp"
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tổng thanh toán:" />

        <TextView
            android:paddingTop="9dp"
            android:textSize="15dp"
            android:id="@+id/tv_tong_tien_ls"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>