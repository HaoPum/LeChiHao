<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".XacNhanDatVe">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4169E1"
        android:baselineAligned="false"
        android:paddingLeft="150dp"
        android:paddingTop="9dp"
        android:text="Thông tin đặt vé"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconkhachhang" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:paddingTop="13dp"
            android:text="Tên hành khách:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconname" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:text="CMND/CCCD:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_cmnd"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/iconmaybay1" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:text="Điểm khởi hành:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_khoi_hanh"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconmaybay1" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:text="Điểm kết thúc:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_ket_thuc"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icontime" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:text="Thời gian khởi hành:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_tg_khoi_hanh"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icontime" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:text="Thời gian kết thúc:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_tg_ket_thuc"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconquanlty" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:text="Số lượng vé:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_so_luong"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconmoney" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:text="Tổng tiền:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_tong_tien"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_xac_nhan_dat_ve"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="#4169E1"
        android:text="Xác nhận đặt vé"
        android:textColor="@color/white" />

</LinearLayout>