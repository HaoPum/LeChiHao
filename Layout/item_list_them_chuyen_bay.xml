<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_diem_di"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="ĐIỂM ĐI"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_time_di"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="TIME ĐI"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_item_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/iconmaybay1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_diem_den"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="ĐIỂM ĐẾN"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_time_den"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="TIME ĐẾN"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_list_money"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/iconmoney" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="GIÁ VÉ: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_gia_ve"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="00.00"
            android:textColor="#FF0000"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>